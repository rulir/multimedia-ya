.source-links-form
	display flex
	flex-direction column
	align-items center
	width 300px
	margin 0 auto
	
	&__input
		display block
		box-sizing border-box
		padding 14px 8px
		margin 10px 0
		width 300px
		height 20px
		border 0
		box-shadow 0px 0px 8px rgba(0,0,0,0.2)

	&__submit
		display block
		align-self flex-end
		background #feda5a
		border 0
		border-bottom 1px solid #aaa
		padding 8px 12px
		box-shadow 0px 0px 8px rgba(0,0,0,0.2)
		color #444
		border-radius 3px
		margin 10px 0
		cursor pointer